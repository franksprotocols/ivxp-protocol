{
  "name": "@ivxp/test-utils",
  "version": "0.1.0",
  "type": "module",
  "description": "IVXP shared test utilities, fixtures, and mocks for the Intelligence Value Exchange Protocol",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build && pnpm test",
    "publish:dry": "npm publish --dry-run",
    "publish": "npm publish --provenance --access public"
  },
  "keywords": [
    "ivxp",
    "protocol",
    "test-utils",
    "testing",
    "fixtures",
    "mocks",
    "typescript",
    "web3",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/franksprotocols/ivxp-protocol.git",
    "directory": "packages/test-utils"
  },
  "bugs": {
    "url": "https://github.com/franksprotocols/ivxp-protocol/issues"
  },
  "homepage": "https://github.com/franksprotocols/ivxp-protocol/tree/main/packages/test-utils#readme",
  "dependencies": {
    "@ivxp/protocol": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "viem": "^2.0.0"
  },
  "license": "MIT"
}
