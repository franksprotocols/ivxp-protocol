{
  "name": "@ivxp/test-utils",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "IVXP shared test utilities, fixtures, and mocks",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@ivxp/protocol": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "viem": "^2.0.0"
  },
  "license": "MIT"
}
