{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ivxp.dev/schemas/download-response.json",
  "title": "IVXP Download Response",
  "description": "Response from GET /ivxp/download/{order_id}. Returns the completed deliverable.",
  "type": "object",
  "required": [
    "protocol",
    "message_type",
    "timestamp",
    "order_id",
    "status",
    "provider_agent",
    "deliverable",
    "content_hash"
  ],
  "properties": {
    "protocol": {
      "type": "string",
      "const": "IVXP/1.0",
      "description": "Protocol version identifier."
    },
    "message_type": {
      "type": "string",
      "const": "service_delivery",
      "description": "Message type discriminator."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the delivery."
    },
    "order_id": {
      "type": "string",
      "minLength": 1,
      "description": "Order identifier."
    },
    "status": {
      "type": "string",
      "const": "completed",
      "description": "Always 'completed' for download responses."
    },
    "provider_agent": {
      "$ref": "#/$defs/DeliveryProviderAgent"
    },
    "deliverable": {
      "$ref": "#/$defs/Deliverable"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA-256 hash of the deliverable content. Format: sha256:{hex}."
    },
    "delivered_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the deliverable was produced (ISO 8601)."
    },
    "signature": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{130}$",
      "description": "Provider's EIP-191 signature on the delivery."
    },
    "signed_message": {
      "type": "string",
      "description": "The message that was signed by the provider."
    }
  },
  "additionalProperties": false,
  "$defs": {
    "DeliveryProviderAgent": {
      "type": "object",
      "required": ["name", "wallet_address"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Provider name."
        },
        "wallet_address": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Provider's Ethereum wallet address."
        }
      },
      "additionalProperties": false
    },
    "Deliverable": {
      "type": "object",
      "required": ["type", "content"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1,
          "description": "Deliverable content type (e.g. 'code_review_result', 'research_report')."
        },
        "format": {
          "type": "string",
          "description": "Content format (e.g. 'markdown', 'json')."
        },
        "content": {
          "description": "Deliverable content. Structure depends on the service type."
        }
      },
      "additionalProperties": false
    }
  }
}
