{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ivxp.dev/schemas/delivery-request.json",
  "title": "IVXP Delivery Request",
  "description": "POST /ivxp/deliver body. Client submits payment proof and requests delivery.",
  "type": "object",
  "required": [
    "protocol",
    "message_type",
    "timestamp",
    "order_id",
    "nonce",
    "payment_proof",
    "signature",
    "signed_message"
  ],
  "properties": {
    "protocol": {
      "type": "string",
      "const": "IVXP/1.0",
      "description": "Protocol version identifier."
    },
    "message_type": {
      "type": "string",
      "const": "delivery_request",
      "description": "Message type discriminator."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the delivery request."
    },
    "order_id": {
      "type": "string",
      "minLength": 1,
      "description": "Order identifier from the quote."
    },
    "nonce": {
      "type": "string",
      "minLength": 16,
      "maxLength": 128,
      "description": "Unique nonce generated per delivery request."
    },
    "payment_proof": {
      "$ref": "#/$defs/PaymentProof"
    },
    "delivery_endpoint": {
      "type": "string",
      "format": "uri",
      "description": "Optional client endpoint for P2P push delivery."
    },
    "signature": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{130}$",
      "description": "EIP-191 signature (0x + 130 hex chars)."
    },
    "signed_message": {
      "type": "string",
      "minLength": 1,
      "pattern": "^IVXP-DELIVER \\| Order: .+ \\| Payment: 0x[a-fA-F0-9]{64} \\| Nonce: .{16,} \\| Timestamp: .+$",
      "description": "The message that was signed. Canonical format: 'IVXP-DELIVER | Order: {order_id} | Payment: {tx_hash} | Nonce: {nonce} | Timestamp: {timestamp}'."
    }
  },
  "additionalProperties": false,
  "$defs": {
    "PaymentProof": {
      "type": "object",
      "required": ["tx_hash", "from_address", "network"],
      "properties": {
        "tx_hash": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{64}$",
          "description": "On-chain transaction hash (0x + 64 hex chars)."
        },
        "from_address": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Sender wallet address."
        },
        "network": {
          "type": "string",
          "enum": ["base-mainnet", "base-sepolia"],
          "description": "Blockchain network where payment was made."
        },
        "to_address": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Recipient wallet address."
        },
        "amount_usdc": {
          "type": "string",
          "description": "Raw USDC amount (6 decimals string representation)."
        },
        "block_number": {
          "type": "integer",
          "minimum": 0,
          "description": "Block number where the transaction was included."
        }
      },
      "additionalProperties": false
    }
  }
}
