{
  "name": "@ivxp/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "IVXP Protocol - Intelligence Value Exchange Protocol",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:interop:ts-ts": "pnpm --filter @ivxp/sdk test:interop:ts-ts",
    "test:interop:ts-python": "pnpm --filter @ivxp/sdk test:interop:ts-python",
    "test:interop:python-ts": "pnpm --filter @ivxp/sdk test:interop:python-ts",
    "test:interop:python": "pnpm --filter @ivxp/sdk test:interop:python",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "publish:dry": "pnpm -r --filter './packages/*' publish --dry-run --access public --no-git-checks",
    "publish": "pnpm -r --filter './packages/*' publish --provenance --access public",
    "docs:api": "typedoc",
    "docs:api:watch": "typedoc --watch",
    "docs:build": "pnpm docs:api",
    "docs:validate": "pnpm --filter @ivxp/sdk typecheck && tsc --noEmit --project packages/sdk/tsconfig.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.0.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.4.0",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "use-sync-external-store": "^1.4.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "zod": "4"
      }
    }
  },
  "license": "MIT"
}
