# IVXP Protocol Environment Variables
# Copy this file to .env and fill in your values

# ----------------------------------------
# Blockchain Configuration
# ----------------------------------------

# Base L2 RPC URL (Mainnet or Sepolia)
BASE_RPC_URL=https://mainnet.base.org

# USDC Contract Address (Base Mainnet)
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ----------------------------------------
# Provider Configuration
# ----------------------------------------

# Provider wallet private key (DO NOT commit real values)
PROVIDER_PRIVATE_KEY=

# Provider service endpoint
PROVIDER_ENDPOINT=http://localhost:3001

# ----------------------------------------
# Hub Configuration
# ----------------------------------------

# Next.js public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# ----------------------------------------
# Registry Configuration
# ----------------------------------------

# Registry API URL
REGISTRY_URL=http://localhost:3002

# ----------------------------------------
# Development
# ----------------------------------------

# Node environment
NODE_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=info
