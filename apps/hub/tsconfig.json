{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "rootDir": ".",
    "outDir": null,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    /* Next.js requires verbatimModuleSyntax off â€” React JSX transform
       uses synthetic default imports incompatible with verbatim mode. */
    "verbatimModuleSyntax": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@ivxp/protocol": ["../../packages/protocol/src/index.ts"],
      "@ivxp/sdk": ["../../packages/sdk/src/index.ts"],
      "@ivxp/test-utils": ["../../packages/test-utils/src/index.ts"]
    },
    "strict": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
